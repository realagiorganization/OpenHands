{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "OpenHands (Shell)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "openhands.server.listen:app",
                "--reload",
                "--port", "3000",
                "--host", "127.0.0.1",
                "--reload-exclude", "./workspace"
      ],
      "justMyCode": false,
      "console": "integratedTerminal",
      "env": {
        "WORKSPACE_BASE": "${workspaceFolder}/workspace",
        "LOG_LEVEL": "INFO"
      }
    }
  ]
}
