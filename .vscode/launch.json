  {
  "version": "0.2.0",
  "configurations": [
    {
      "name": "OpenHands",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "/usr/local/py-utils/bin/poetry",
      "python": "/usr/local/bin/python",
      "args": [
        "run",
        "python",
        "-m",
        "uvicorn",
        "openhands.server.listen:app",
        "--host",
        "0.0.0.0",
        "--port",
        "3000",
        "--reload"
      ],
      "justMyCode": false,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "env": {
        "WORKSPACE_BASE": "${workspaceFolder}/workspace",
        "LOG_LEVEL": "INFO"
      }
    }
  ]
}
